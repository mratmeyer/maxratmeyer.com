<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {% if title == "Max Ratmeyer's Blog" %}
        <title>{{ renderData.title or title or metadata.title }}</title>
    {% else %}
        <title>{{ renderData.title or title or metadata.title }} - Max Ratmeyer's Blog</title>
    {% endif %}
    <meta name="description" content="{{ renderData.description or description or metadata.description }}"/>

    {% if assets.path !== "/assets/" %}
        <link rel="preconnect" href="{{ assets.path }}" crossorigin>
    {% endif %}

    <link rel="preload" href="{{ assets.path }}fonts/inter-v2-latin-400-600-700.woff2" as="font" type="font/woff2" crossorigin>

    {% set css %}
    {% include "style.css" %}
    {% endset %}
    
    <style>
        {{ css | cssmin | safe }}
    </style>

    {% set absoluteUrl %}{{ page.url | url }}{% endset %}
    <link rel="canonical" href="https://www.maxratmeyer.com{{ absoluteUrl }}"/>

    <link rel="icon" type="image/png" sizes="16x16" href="{{ assets.path }}icons/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ assets.path }}icons/favicon-32x32.png">
    
</head>