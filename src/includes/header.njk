<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {% if title == "Max Ratmeyer's Blog" %}
        <title>{{ renderData.title or title or metadata.title }}</title>
    {% else %}
        <title>{{ renderData.title or title or metadata.title }} - Max Ratmeyer's Blog</title>
    {% endif %}
    <meta name="description" content="{{ renderData.description or description or metadata.description }}"/>

    {% if config.path !== "/assets/" %}
        <link rel="preconnect" href="{{ config.path }}" crossorigin>
    {% endif %}

    <link rel="preload" href="{{ config.path }}fonts/inter-v2-latin-400-600-700.woff2" as="font" type="font/woff2" crossorigin>

    {% set css %}
    {% include "style.css" %}
    {% endset %}
    
    <style>
        {{ css | cssmin | safe }}
    </style>

    <link rel="icon" type="image/png" sizes="16x16" href="{{ assets.imagePath }}icons/profile-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ assets.imagePath }}icons/profile-32x32.png">
    <link rel="icon" type="image/png" sizes="48x48" href="{{ assets.imagePath }}icons/profile-48x48.png">
    <link rel="icon" type="image/png" sizes="64x64" href="{{ assets.imagePath }}icons/profile-64x64.png">
    <link rel="icon" type="image/png" sizes="128x128" href="{{ assets.imagePath }}icons/profile-128x128.png">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ assets.imagePath }}icons/profile-192x192.png">

    {% set absoluteUrl %}{{ page.url | url }}{% endset %}
    <link rel="canonical" href="https://www.maxratmeyer.com{{ absoluteUrl }}"/>
    
</head>