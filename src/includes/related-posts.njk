<div class ="related-posts">
  <p class="related-posts-header">Latest posts:</p>
  {%- for post in collections.posts | reverse %}
  {% if loop.index0 < 4 %}
    <div class="related-posts-item">
      <a href="{{ post.url | url }}">
        {{ post.data.title }}
      </a>
      <p>{{ post.data.description }}</p>
    </div>
  {% endif %}
  {%- endfor %}
</div>