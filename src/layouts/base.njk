<!DOCTYPE html>
<html lang="en">

{% include "header.njk" %}

<body class="light-theme">

  {% set js %}
    {% include "theme.js" %}
  {% endset %}

  <script>
    {{ js | jsmin | safe }}
  </script>

  <div class="page-container">

    <div class="content-container">

      {% include "nav.njk" %}

      <div class="page-content">
      {{ content | safe }}
      </div>
      
    </div>

    {% include "footer.njk" %}

  </div>

  {% set js %}
    {% include "analytics.js" %}
  {% endset %}

  {% if config.analytics == "true" %}
  <noscript><img src="https://stats.maxnet.work/ingress/d5869121-a39c-443b-ac53-96fd87be7dd4/pixel.gif"></noscript><script async defer>
    {{ js | jsmin | safe }}
  </script>
  {% endif %}

</body>

</html>
