<h2 class="subheader">Latest blog posts:</h2>

<div class="post-excerpts">
    {%- for post in collections.posts | reverse -%}
        {% if loop.index0 < 3 %}    
        <div class="post-excerpt">
            <div class="article-details">
                <div class="article-header">
                    <div class="article-details" title="{{ (post.data.date or post.date or date) }}">
                        <span class="date md">{{ (post.data.date or post.date or date) | monthDay }} {{ (post.data.date or post.date or date) | year }}</span>
                    </div>
                </div>
            </div>
            
            <div class="article-preview">
                <a class="article-title" href="{{ post.url | url }}">
                    <span>{{ post.data.title or title }}</span>
                </a>

                {% include "tags.njk" %}

                <p class="article-description">{{ post.data.description or description }}</p>
            </div>
        </div>
        {% endif %}
    {%- endfor -%}
    
