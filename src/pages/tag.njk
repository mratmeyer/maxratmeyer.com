---
renderData:
  title: Tagged “{{ tag }}”
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: /tags/{{ tag }}/
eleventyExcludeFromCollections: true
---
<h1 class="page-title">Tagged "{{ tag }}"</h1>

{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
<div class="archive-item">
  {% include "post-header.njk" %}
</div>
{% endfor %}
